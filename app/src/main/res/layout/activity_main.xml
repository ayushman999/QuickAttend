<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="275dp"
        android:layout_height="61dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="Dashboard"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <Button
        android:id="@+id/add_notice"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="452dp"
        android:background="@drawable/btn_radius"
        android:text="Add Notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_notices_list"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="552dp"
        android:background="@drawable/btn_radius"
        android:text="view Notices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sheet_form"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="244dp"
        android:text="Form a sheet"
        android:background="@drawable/btn_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teacher_light_attend"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/btn_radius"
        android:text="Light Attend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dashboard"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_marginTop="136dp"
        android:text="Take Attendance"
        android:background="@drawable/btn_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>