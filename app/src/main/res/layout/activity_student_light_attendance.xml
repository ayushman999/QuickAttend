<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".students.StudentLightAttendance">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="Light Attendance"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/light_student_name"
        android:layout_width="303dp"
        android:layout_height="51dp"
        android:ems="10"
        android:background="@drawable/btn_radius"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:paddingLeft="30dp"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358" />

    <EditText
        android:id="@+id/light_student_room_id"
        android:layout_width="303dp"
        android:layout_height="51dp"
        android:background="@drawable/btn_radius"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:paddingLeft="30dp"
        android:ems="10"
        android:hint="Enter unique Room ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />


    <EditText
        android:id="@+id/light_student_phone_num"
        android:layout_width="303dp"
        android:layout_height="51dp"
        android:background="@drawable/btn_radius"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"

        android:ems="10"
        android:paddingLeft="30dp"
        android:hint="Enter your phone number"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/light_student_button"
        android:layout_width="203dp"
        android:layout_height="58dp"

        android:layout_marginTop="84dp"
        android:layout_marginBottom="198dp"
        android:background="@drawable/btn_radius"
        android:text="Dive In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/light_student_phone_num"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>